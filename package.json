{
  "name": "webapp-starter-template",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.ts",
  "scripts": {
    "start": "concurrently -n \"server, react\" \"npm:server\" \"npm:frontend\"",
    "server": "ts-node-dev src/server.ts",
    "frontend": "node scripts/start-frontend.js",
    "prepare": "husky install",
    "lint": "eslint src frontend/src --fix",
    "format": "prettier src --write \"src/**/*.{js,ts,json,md}\" --config ./.prettierrc"
  },
  "author": "Fabian",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "concurrently": "^7.6.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "src/**/*.{js,ts,json,md}": [
      "prettier --write",
      "eslint src --fix"
    ],
    "frontend/src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "node scripts/abort-if-console-log-used.js",
      "eslint src --fix"
    ]
  }
}
